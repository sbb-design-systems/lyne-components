{
  "compilerOptions": {
    "outDir": "../dist/dev-infra-scripts",
    "module": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2024",
    "lib": ["es2024"],
    "strict": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": ["**/*.ts"],
  "exclude": ["generate-component"]
}
