{
  "name": "@sbb-esta/lyne-components",
  "version": "0.36.13",
  "description": "Lyne Design System",
  "keywords": [
    "design system",
    "web components",
    "stencil",
    "storybook"
  ],
  "author": "Lyne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyne-design-system/lyne-components.git"
  },
  "bugs": {
    "url": "https://github.com/lyne-design-system/lyne-components/issues"
  },
  "files": [
    "dist/",
    "loader/",
    "hydrate",
    "_index.scss",
    "src/global/**/*.scss"
  ],
  "scripts": {
    "build:stencil": "stencil build --ci --prod --docs",
    "build:storybook": "storybook build --quiet",
    "build:react": "cd react-library && tsc -p .",
    "build:chromatic-stories": "tsx ci/chromatic-stories-generator.ts",
    "build": "npm-run-all --sequential build:stencil build:storybook build:react",
    "format": "prettier \"**/*\" --write --ignore-unknown",
    "generate": "node convenience/generate-component/index.js",
    "integrity": "npm-run-all --sequential build:stencil format",
    "lint": "npm-run-all --sequential lint:*",
    "lint:ts": "eslint \"**/*.{ts,tsx}\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint:yml": "eslint \"**/*.{yml,yaml}\"",
    "lint:styles": "stylelint \"**/*.scss\"",
    "start:stencil": "stencil build --prod --watch --docs",
    "start:storybook": "storybook dev -p 6006 -s dist",
    "start": "npm-run-all --sequential build:stencil build:react --parallel start:stencil start:storybook",
    "test:dev": "stencil test --spec --e2e --coverage",
    "test:prod": "stencil test --prod --spec --e2e --coverage",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "7.22.5",
    "@babel/plugin-syntax-jsx": "7.22.5",
    "@babel/plugin-transform-react-jsx": "7.22.5",
    "@babel/preset-env": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@brightlayer-ui/storybook-rtl-addon": "1.1.0",
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@sbb-esta/lyne-design-tokens": "0.3.4",
    "@stencil/core": "3.4.0",
    "@stencil/react-output-target": "0.5.3",
    "@stencil/sass": "3.0.4",
    "@storybook/addon-a11y": "7.0.20",
    "@storybook/addon-actions": "7.0.20",
    "@storybook/addon-essentials": "7.0.20",
    "@storybook/addon-interactions": "7.0.20",
    "@storybook/addon-mdx-gfm": "7.0.20",
    "@storybook/html": "7.0.20",
    "@storybook/html-webpack5": "7.0.20",
    "@storybook/jest": "0.1.0",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/testing-library": "0.1.0",
    "@types/jest": "27.5.2",
    "@types/react": "16.14.43",
    "@types/react-dom": "16.9.19",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@typescript-eslint/parser": "5.59.11",
    "chromatic": "6.19.7",
    "css-loader": "6.8.1",
    "date-fns": "2.30.0",
    "esbuild": "0.18.2",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-yaml": "0.5.0",
    "glob": "10.2.7",
    "husky": "8.0.3",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "jsx-dom": "8.0.7",
    "jsx-transform": "2.4.1",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "puppeteer": "20.7.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "sass": "1.63.4",
    "sass-loader": "13.3.2",
    "standard-version": "9.5.0",
    "stencil-inline-svg": "1.1.0",
    "storybook": "7.0.20",
    "style-loader": "3.3.3",
    "stylelint": "15.7.0",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-scss": "5.0.1",
    "tsx": "3.12.7",
    "typescript": "5.1.3"
  },
  "resolutions": {
    "**/@types/react": "16.14.43"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/lyne-components/",
  "publishConfig": {
    "access": "public"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Bug Fixes"
      },
      {
        "type": "refactor",
        "section": "Refactorings"
      },
      {
        "type": "perf",
        "hidden": "Performance"
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,json,md,html,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,yaml,yml}": [
      "eslint --fix"
    ],
    "*.{scss}": [
      "stylelint --fix"
    ]
  }
}
